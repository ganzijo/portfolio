<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub_tab_page_recollection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_ModemScan"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/selector_common_btn"
                android:text="목록 삭제"
                android:textColor="#666666"
                android:textSize="26sp" />

            <Button
                android:id="@+id/btn_ReadDataCollect"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/selector_common_btn"
                android:text="검침데이터 수집"
                android:textColor="#666666"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_subtab_layout_background"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#CD5143" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="재수집 대상 목록"
                    android:textColor="#666666"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="("
                    android:textColor="#666666"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_recollec_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="999개"
                    android:textColor="#FF0000"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=")"
                    android:textColor="#666666"
                    android:textSize="25sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text="전체선택"
                    android:textColor="#666666"
                    android:textSize="25sp" />

                <CheckBox
                    android:id="@+id/ck_AllCollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:button="@drawable/selector_main_checkbox" />
            </LinearLayout>

            <View
                android:layout_width="740dp"
                android:layout_height="1dip"
                android:layout_marginLeft="30dp"
                android:background="#bdc3c7" />

            <ListView
                android:id="@+id/lv_Readmodem"
                android:layout_width="fill_parent"
                android:layout_height="790dp"
                android:clickable="true"
                android:divider="#bdc3c7"
                android:dividerHeight="1dp"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:paddingTop="10dp" />
        </LinearLayout>

</LinearLayout>