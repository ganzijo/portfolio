<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_page_main_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nuri.MainActivity" >

    <!-- <Button -->
    <!-- android:id="@+id/btn_TempPage" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" /> -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="600dp"
        android:layout_height="820dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@drawable/img_login_background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="380dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/nuritelecom_logo" />

      <EditText
            android:id="@+id/et_LoginId"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_login_et"
            android:hint=" ID "
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:textColorHint="#707070"
            android:textSize="20dp" >
        </EditText>

        <EditText
            android:id="@+id/et_LoginPw"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_login_et"
            android:hint=" PASSWORD"
            android:paddingEnd="0dp"
            android:password="true"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textColorHint="#707070"
            android:imeOptions="actionDone"
            android:textSize="20sp" >
        </EditText>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chk_SaveId"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/selector_login_checkbox"
                android:text="아이디저장"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/chk_AutoLogin"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/selector_login_checkbox"
                android:text=" 자동로그인"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_Login"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_login_btn"
            android:text="로그인"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo_view"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/nuri_logo" />

            <TextView
                android:id="@+id/tv_Version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="ver.1.0"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>