<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="660dp"
    android:background="@drawable/shape_login_et"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_gravity="center" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="#CD5143"
            android:gravity="center"
            android:text=" 저장소 삭제 설정"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:background="#eeeeee" />

        <TableRow
            android:id="@+id/table1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:text=" 보관 주기 "
                android:textSize="30sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="15dp" >

                <EditText
                    android:id="@+id/et_Save_Period"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:text=""
                    android:textColor="#95A5A6"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" 일"
                    android:textColor="#95A5A6"
                    android:textSize="30sp" />
            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#eeeeee" />

        <TableRow
            android:id="@+id/table2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="2"
                android:padding="15dp"
                android:text=" 이용 용량"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_UseCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="15dp"
                android:textColor="#95A5A6"
                android:textSize="30sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#eeeeee" />

        <TableRow
            android:id="@+id/table3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:text=" 휴지통 "
                android:textSize="30sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_Delete_Data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="비우기"
                android:textColor="#95A5A6"
                android:textSize="30sp" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#eeeeee" />

        <TableRow
            android:id="@+id/table10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp" >

            <Button
                android:id="@+id/btn_Storage_Popup_Confirm"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_common2_btn"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_Storage_Popup_Cancel"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_common2_btn"
                android:padding="10dp"
                android:text="취소"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>